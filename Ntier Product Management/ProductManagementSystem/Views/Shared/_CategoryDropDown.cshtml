@model IEnumerable<ProductManagementSystem.Models.ProductCategory>

@if (Model.Count() != 0)
{
    List<SelectListItem> items = new List<SelectListItem>();

    foreach (var item in Model)
    {
        items.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ProductCategoryID.ToString()
        });
    }
    @Html.DropDownList("ProductCategoryID", (IEnumerable<SelectListItem>)items, "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductCategoryID")
}
else
{
    @Html.DropDownList("ProductCategoryID", Enumerable.Empty<SelectListItem>(), "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductCategoryID")
}