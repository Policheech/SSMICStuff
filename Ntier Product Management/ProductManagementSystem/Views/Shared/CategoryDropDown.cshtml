@model IEnumerable<ProductManagementSystem.Models.ProductCategory>

@if (Model.Count() != 0)
{
    SelectList items = new SelectList(Model, "ProductCategoryID", "Name", ViewBag.ProductCategoryID);
    @Html.DropDownList("ProductCategoryID", (IEnumerable<SelectListItem>)items, "--select--", new { @class = "selectpicker form-control ProductCategoryid" })
    @Html.ValidationMessage("ProductCategoryID")
}
else
{
    @Html.DropDownList("ProductCategoryID", Enumerable.Empty<SelectListItem>(), "--select--", new { @class = "selectpicker form-control ProductCategoryid" })
    @Html.ValidationMessage("ProductCategoryID")
}
