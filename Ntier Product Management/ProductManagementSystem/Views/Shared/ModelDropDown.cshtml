@model IEnumerable<ProductManagementSystem.Models.ProductModel>

@if (Model.Count() != 0)
{
    SelectList items = new SelectList(Model, "ProductModelId", "Name", ViewBag.ProductModelID);
    @Html.DropDownList("ProductModelId", (IEnumerable<SelectListItem>)items, "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductModelId")
}
else
{
    @Html.DropDownList("ProductModelId", Enumerable.Empty<SelectListItem>(), "--select--", new { @class = "selectpicker form-control" })
    @Html.ValidationMessage("ProductModelId")
}
