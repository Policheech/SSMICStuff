@model IEnumerable<ProductManagementSystem.Models.ProductSubCategory>

@if (Model.Count() != 0)
{
    SelectList items = new SelectList(Model, "ProductSubCategoryID", "Name", ViewBag.ProductSubCategoryID);
    @Html.DropDownList("ProductSubCategoryID", (IEnumerable<SelectListItem>)items, "--select--", new { @class = "selectpicker form-control ddlSubcategory" })
    @Html.ValidationMessage("ProductSubCategoryID")
}
else
{
    @Html.DropDownList("ProductSubCategoryID", Enumerable.Empty<SelectListItem>(), "--select--", new { @class = "selectpicker form-control ddlSubcategory" })
    @Html.ValidationMessage("ProductSubCategoryID")
}

